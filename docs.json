{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Logivice",
  "colors": {
    "primary": "#06B6D4",
    "light": "#4F46E5",
    "dark": "#0F172A"
  },
  "favicon": "/favicon.svg",
  "logo": {
    "light": "/logo/logo-light.svg",
    "dark": "/logo/logo-dark.svg"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Overview",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "index",
              "get-started/quickstart",
              "get-started/for-developers",
              "get-started/for-partners",
              "get-started/for-internal"
            ]
          },
          {
            "group": "Modules",
            "pages": [
              "features/uops",
              "features/notebook",
              "features/cockpit"
            ],
            "groups": [
              {
                "group": "uControl",
                "pages": [
                  "features/ucontrol",
                  "modules/ucontrol/carriers", 
                  "features/ucontrol"
                ]
              }
            ]
          }
        ]
      },
      {
        "tab": "Resources",
        "groups": [
          {
            "group": "Knowledge Base",
            "pages": [
              "knowledge-base/index",
              "knowledge-base/troubleshooting",
              "knowledge-base/integrations",
              "knowledge-base/best-practices"
            ]
          },
          {
            "group": "FAQ",
            "pages": [
              "faq/index"
            ]
          }
        ]
      },
      {
        "tab": "Updates",
        "groups": [
          {
            "group": "Release Notes",
            "pages": [
              "release-notes/v1.0.0"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Logivice API",
            "openapi": {
              "source": "/api-reference/openapi.yaml",
              "directory": "api-reference"
            }
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Main Website",
          "href": "https://logivice.com",
          "icon": "globe"
        },
        {
          "anchor": "Community",
          "href": "https://t.me/logivice_ai",
          "icon": "message"
        }
      ]
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Contact Support",
        "href": "mailto:support@logivice.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Open Dashboard",
      "href": "https://dashboard.logivice.com"
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/logivice",
      "linkedin": "https://linkedin.com/company/logivice"
    }
  }
}